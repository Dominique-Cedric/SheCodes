class Dog():
    # class attributes 
    kind = 'canine'
    
    # instance attribute
    # def __init__(self, name):
    #     self.name = name

    #instance attribute
    def __init__(self, dog_name, breed, age, colour, weight):
        self.name = dog_name
        self.breed = breed
        self.age = age
        self.colour = colour
        self.weight = weight

    def eat(self):
        print('NOM NOM NOM!!!..')
        self.weight = self.weight + 0.5

    def exercise(self):
        print('BURNING CALORIES VROOM VROOM')
        self.weight = self.weight - 0.2
    

dog = Dog('Jett', 'pug', 5, 'black', 12)
print(dog.name, dog.breed, dog.age, dog.colour, dog.weight)
dog.eat()
dog.eat()
dog.eat()
print(dog.name, dog.breed, dog.age, dog.colour, dog.weight)
dog.exercise()
print(dog.name, dog.breed, dog.age, dog.colour, dog.weight)




